<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.datingapp.android.Profile.Profile_Details.Profile_Details_F">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:id="@+id/scrollView"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="80dp"
                android:background="@color/white">

                <androidx.percentlayout.widget.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/card_layout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        app:layout_heightPercent="80%"
                        android:background="@color/black"
                        android:id="@+id/shared_element">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.daimajia.slider.library.SliderLayout
                                android:id="@+id/slider"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:auto_cycle="false"
                                android:background="@color/black"
                                android:layout_centerInParent="true"
                                app:pager_animation="Default"
                                app:pager_animation_span="500"
                                android:padding="1dp"
                                android:layout_margin="1dp"
                                app:indicator_visibility="visible"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:paddingBottom="30dp">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/white"/>
                        <com.daimajia.slider.library.Indicators.PagerIndicator
                            android:id="@+id/custom_indicator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            app:selected_color="@color/pink_color"
                            app:unselected_color="@color/white"
                            app:shape="oval"
                            android:layout_marginBottom="40dp"
                            android:layout_alignParentBottom="true"
                            />



                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:scaleType="fitXY"
                            android:id="@+id/move_downbtn"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="20dp"
                            android:visibility="visible"
                            android:background="@color/transparent"
                            android:src="@drawable/ic_close"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"/>


                    </RelativeLayout>


                </androidx.percentlayout.widget.PercentRelativeLayout>


                <RelativeLayout
                    android:id="@+id/username_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/user_name_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile name"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/bottom_layout"
                    android:visibility="visible"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/white"
                    android:layout_below="@+id/card_viewstack">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/job_layout">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_job"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:id="@+id/user_jobtitle_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Job Title"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/dimgray"
                            android:textSize="16dp" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/birthday_layout">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_location"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:id="@+id/user_birthday_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Birthday"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/dimgray"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dimgray"
                            android:text="About"
                            android:textSize="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/user_about_txt"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</FrameLayout>
